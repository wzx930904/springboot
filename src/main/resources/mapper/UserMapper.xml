        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shsxt.dao.UserDao" >


    <select id="findById" resultType="User" >
        SELECT
        *
        FROM
        t_user
        WHERE
        id = #{id}
    </select>
</mapper>